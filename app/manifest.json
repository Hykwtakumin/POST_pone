{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "externally_connectable": {
    "matches": ["https://oauth.io/*"]
  },
  "background": {
    "scripts": [
      "bower_components/jquery/dist/jquery.js",
      "bower_components/oauth-js/dist/oauth.js",
      "bower_components/socket.io.js",
      "scripts/chromereload.js",
      "bower_components/simontabor/jquery-toggles/toggles.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "https://twitter.com/*",
    "https://twitter.com/*/*/*",
    "background",
    "notifications",
    "tabs",
    "storage",
    "webRequest",
    "*://*.google.com/",
    "webRequestBlocking"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "POST_pone",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
  ]
}
